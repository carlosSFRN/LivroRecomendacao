@model IEnumerable<LivroRecomendacao.ViewModels.LivroListViewModel>

@{
    ViewData["Title"] = "Home Page";
}
    
<section id="gallery">
    <div class="container">
        <h1>Obras literárias recomendadas</h1>
        <hr />
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 mb-4">
                    <div class="card">
                        <img src="@item.LinkFoto" alt="" class="card-img-top w-100" style="height:350px">
                        <div class="card-body">
                            <h5 class="card-title">@Html.DisplayFor(modelItem => item.Titulo)</h5>
                            <h6 class="card-title">@Html.DisplayFor(modelItem => item.NomeAutor)</h6>
                            <p class="card-text">
                                @Html.DisplayFor(modelItem => item.Descrico)
                            </p>
                            <div class="form-group">
                                <a asp-action="Favoritar" asp-route-id="@item.Id" class="btn btn-outline-success btn-sm">Favoritar</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>


