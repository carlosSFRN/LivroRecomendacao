@model IEnumerable<LivroRecomendacao.ViewModels.LivroListViewModel>

@{
    ViewData["Title"] = "Index";
}

<section id="gallery">
    <div class="container">
        <h1>Obras literárias recomendadas</h1>
        <h6>Genêro favorito: @ViewBag?.GeneroPreferencia</h6>
        <h6>Autor favorito: @ViewBag?.AutorPreferencia</h6>
        <hr />
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 mb-4">
                    <div class="card">
                        <img src="@item.LinkFoto" alt="" class="card-img-top w-100" style="height:350px">
                        <div class="card-body">
                            <h5 class="card-title">@Html.DisplayFor(modelItem => item.Titulo)</h5>
                            <h6 class="card-title">@Html.DisplayFor(modelItem => item.NomeAutor)</h6>
                            <small class="text-muted">@Html.DisplayFor(modelItem => item.NomeGenero)</small>
                            <p class="card-text">
                                @Html.DisplayFor(modelItem => item.Descrico)
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

