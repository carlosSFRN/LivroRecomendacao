@model LivroRecomendacao.Models.Livro

@{
    ViewData["Title"] = "Delete";
}

<h4>Excluir</h4>

<h6>Tem certeza que deseja excluir esse livro?</h6>
<hr />
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Titulo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Titulo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descrico)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descrico)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <a asp-action="Index" class="btn btn-secondary">Voltar</a>
        <input type="submit" value="Excluir" class="btn btn-danger" /> 
    </form>
</div>
