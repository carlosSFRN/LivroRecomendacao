<div class="container">
	<div class="row justify-content-center">
		<div class="col-md-6">
			<div class="card">
				<header class="card-header">
					<h4 class="card-title mt-2">Cadastro</h4>
				</header>
				<article class="card-body">
					<form asp-action="Create" asp-controller="Registrar" method="post">
						<div asp-validation-summary="ModelOnly" class="text-danger"></div>
						<div class="form-group">
							<label asp-for="Email"></label>
							<input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" />
							<span asp-validation-for="Email" class="text-danger"></span>
						</div>
						<div class="form-group mt-2">
							<label asp-for="Password"></label>
							<input asp-for="Password" class="form-control" autocomplete="new-password" aria-required="true" />
							<span asp-validation-for="Password" class="text-danger"></span>
						</div>
						<div class="form-group mt-2">
							<label asp-for="ConfirmPassword"></label>
							<input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
							<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
						</div>
						<div class="form-group mt-2">
							<div class="form-group col-md-12">
								<label>Escolha seu genêro literário preferido</label>
								<select id="inputState" class="form-control">
									<option> Choose...</option>
									<option>Uzbekistan</option>
									<option>Russia</option>
									<option selected="">United States</option>
									<option>India</option>
									<option>Afganistan</option>
								</select>
							</div>
						</div>
						<div class="form-group mt-2">
							<div class="form-group col-md-12">
								<label>Escolha seu autor preferido</label>
								<select id="inputState" class="form-control">
									<option> Choose...</option>
									<option>Uzbekistan</option>
									<option>Russia</option>
									<option selected="">United States</option>
									<option>India</option>
									<option>Afganistan</option>
								</select>
							</div>
						</div>
						<div class="form-group mt-2">
							<button type="submit" class="btn btn-primary w-100">Registrar-se</button>
						</div>
					</form>
				</article>
				<div class="border-top card-body text-center">Já tem uma conta? 
					<a asp-page="./Login">Login</a>
